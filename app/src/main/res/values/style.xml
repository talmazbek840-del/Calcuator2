<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="BtnLayout">
        <item name="colorOnBackground">?attr/backgroundColor</item>
        <item name="android:paddingHorizontal">@dimen/layout_padding_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">7</item>
        <item name="android:layout_marginBottom">@dimen/button_area_margin_bottom</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BaseBtn">
        <item name="layout_constraintHorizontal_weight">1</item>
        <item name="android:layout_marginHorizontal">@dimen/button_margin_horizontal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:background">@drawable/round_btn</item>
        <item name="android:colorBackground">?attr/backgroundButtonColor1</item>
        <item name="android:textColor">?attr/textButtonColor1</item>
    </style>

    <style name="EqualBtn" parent="BaseBtn">
        <item name="android:background">@drawable/round_btn2</item>
        <item name="android:colorBackground">?attr/backgroundButtonColor2</item>
        <item name="android:textColor">?attr/textButtonColor2</item>
    </style>

    <style name="OperatorBtn" parent="BaseBtn">
        <item name="android:background">@drawable/round_btn3</item>
        <item name="android:colorBackground">?attr/backgroundButtonColor3</item>
        <item name="android:textColor">?attr/textButtonColor3</item>
    </style>

    <style name="AcBtn" parent="BaseBtn">
        <item name="android:background">@drawable/round_btn4</item>
        <item name="android:colorBackground">?attr/backgroundButtonColor4</item>
        <item name="android:textColor">?attr/textButtonColor4</item>
    </style>

    <style name="DeleteBtn" parent="BaseBtn">
        <item name="android:textSize">@dimen/button_delete_text_size</item>
    </style>

    <style name="OutputTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="InputEditText" parent="OutputTextView">
        <item name="android:focusable">false</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="IOLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>

    </style>

    <style name="ButtonRowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MainLayout" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/backgroundColor</item>
        <item name="android:paddingTop">@dimen/layout_padding_top</item>
        <item name="android:paddingBottom">@dimen/layout_padding_bottom</item>
    </style>

</resources>